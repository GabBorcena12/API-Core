{
  "ConnectionStrings": {
    "DefaultConn": "server=localhost;Database=TicketDB;Trusted_Connection=True;MultipleActiveResultSets=true;Encrypt=False"
  },
  "JwtSettings": {
    "Issuer": "ApiCoreAPI",
    "Audience": "ApiCoreClient",
    "DurationInMinutes": 30,
    "Key": "YourSuperSecretKey"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.MSSqlServer" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Data source=localhost;Integrated Security=true;Database=TicketDB",
          "tableName": "Logs",
          "columnOptionSection": {
            "removeStandardColumns": [ "Message Template" ],
            "customColumns": [
              {
                "ColumnName": "UserId",
                "DataType": "int"
              },
              {
                "ColumnName": "Details",
                "DataType": "nvarchar",
                "DataLength": 1000
              }
            ]
          }
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
